<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddProjectFragment">

    <data>

    </data>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
android:orientation="vertical">

<TextView
android:id="@+id/TextViewCreate"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center"
android:text="Maak een nieuw project aan"
android:textColor="@color/black"
android:textSize="25sp" />

    <TextView
        android:id="@+id/TextViewNaamProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="Projectnaam: "
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextNaamProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Naam van het project..." />

    <TextView
        android:id="@+id/TextViewContactPersoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="Naam contactpersoon: "
        android:textColor="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextContactPersoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Naam contactpersoon..." />

    <Button
        android:id="@+id/buttonCreateProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Maak project aan"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
</layout>